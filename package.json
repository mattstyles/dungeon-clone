{
  "name": "poc-gql-relay-auth-rooms",
  "version": "1.0.0",
  "private": true,
  "description": "POC to see how we can play with graphql to authenticate a user and have them join an open game.",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "setup": "lerna bootstrap --concurrency=1",
    "precommit": "lerna run lint",
    "build": "lerna run build",
    "test": "lerna run test",
    "script": "babel-node -r dotenv/config"
  },
  "keywords": [],
  "author": "Matt Styles",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "bent": "^7.3.12",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "faunadb": "^4.0.0",
    "graphql": "^15.4.0",
    "graphql-schema-linter": "^1.0.1",
    "husky": "^4.3.5",
    "ink": "^3.0.8",
    "ink-select-input": "^4.2.0",
    "inquirer": "^7.3.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "minimist": "^1.2.5",
    "react": "^17.0.1",
    "standard": "^16.0.3"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "graphql-request": "^3.3.0",
    "graphql-tag": "^2.11.0"
  }
}
